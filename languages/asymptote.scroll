exampleCodeHeader Example from <a href='https://en.wikipedia.org/wiki/Asymptote_(vector_graphics_language)'>Wikipedia</a>:
code
 import graph;
 import settings;
 outformat=&quot;pdf&quot;;
 
 size(300,300);
 
 // Function.
 real[] x1 = {-1.5,0};
 real[] y1 = {0,0};
 real[] x2 = {0,1.5};
 real[] y2 = {1,1};
 draw(graph(x1,y1),red+2);
 draw(graph(x2,y2),red+2);
 
 draw((0,0)--(0,1),red+1.5+linetype(&quot;4 4&quot;));
 fill( circle((0,1),0.035), red);
 filldraw( circle((0,0),0.03), white, red+1.5);
 
 // Axes.
 xaxis( Label(&quot;$x$&quot;), Ticks(new real[]{-1,-0.5,0.5,1}), Arrow);
 yaxis( Label(&quot;$y$&quot;), Ticks(new real[]{0.5,1}), Arrow, ymin=-0.18, ymax=1.25);
 // Origin.
 labelx(&quot;$O$&quot;,0,SW);





