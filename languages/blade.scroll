     @stack(&#39;styles&#39;)
 &lt;/head&gt;
 &lt;body&gt;
     @include(&#39;partials.nav&#39;)
 
     @yield(&#39;content&#39;)
 
     &lt;ul&gt;
         @foreach($foo as $bar)
         &lt;li&gt;{{ $bar }}&lt;/li&gt;
         @endforeach
     &lt;/ul&gt;
 
