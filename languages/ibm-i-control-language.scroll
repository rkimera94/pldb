code
 PGM (&amp;IN &amp;TYP)
 
    DCL &amp;IN  *CHAR 6
    DCL &amp;OUT *CHAR 8
    DCL &amp;TYP *CHAR 1
 
    IF (&amp;TYP = J) +
       DO
          CVTDAT DATE(&amp;IN) TOVAR(&amp;OUT) FROMFMT(*MDY) +
                 TOFMT(*JUL) TOSEP(*NONE)
       ENDDO
 
    ELSE IF (&amp;TYP = M) +
       DO
          CVTDAT DATE(&amp;IN) TOVAR(&amp;OUT) FROMFMT(*JUL) +
                 TOFMT(*MDY) TOSEP(*NONE)
       ENDDO
 
    SNDPGMMSG MSG(&#39;IN=&#39; || &amp;IN || &#39;  OUT=&#39; || &amp;OUT) +
              MSGTYPE(*COMP)
 
 ENDPGM

















