 h
    where
      h = 1 fby merge(merge(2 * h, 3 * h), 5 * h);
      merge(x,y) = if xx &lt;= yy then xx else yy fi
         where 
           xx = x upon xx &lt;= yy;
           yy = y upon yy &lt;= xx;
         end;
    end;

